@page
@model RazorWeb.Pages.Categories.IndexModel


<div class="container-fluid p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>&nbsp;Create New Category

            </a>
        </div>
    </div>
    <br /><br />

    <!-- Add the table-bordered class for borders and table-striped for alternating row colors -->
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <!-- Using pr-3 to add space after "Category Name" -->
                <th class="pr-3">Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Categories)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                            <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                        </a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
